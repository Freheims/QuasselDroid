<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.QuasselDroid.Base.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="drawable_oval">@drawable/oval_ripple</item>
    </style>
    <style name="Theme.QuasselDroid.Base.Dark" parent="Theme.AppCompat">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="drawable_oval">@drawable/oval_ripple</item>
    </style>
    <style name="Theme.QuasselDroid.Material.Light.NoActionBar" parent="Theme.QuasselDroid.Material.Light">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.QuasselDroid.Material.Dark.NoActionBar" parent="Theme.QuasselDroid.Material.Dark">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.Base.Toolbar">
        <item name="android:elevation">4dp</item>
    </style>
</resources>